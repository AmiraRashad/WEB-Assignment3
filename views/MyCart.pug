extends layout

block content
  h1 My Cart
  -var total=0;
    table.table
      thead
        th Name
        th Price
        th Actions
      tbody
       each item in MyCart
         - total += Number(item.price)
         tr
            td=item.name
            td=item.price
            td
             a(href="/products/MyCart/remove/"+item._id, class = "btn btn-danger") Remove Item
      tfoot
        tr
          td Total
          td=total
    