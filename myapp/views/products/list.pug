extends ../layout

block content
    .row
        .col-sm-8
            h1= title
        .col-sm-4
            a(href="/products/add", class ="btn btn-success float-right") Add New Product
    table.table
        thead
             tr
                th Name
                th Price
                th Actions
        tbody 
            each product in products
                tr
                    td=Product.name
                    td=Product.price     
                    td
                        a(href="/products/"+product._id, class="btn btn-danger") Delete